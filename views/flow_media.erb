<div>&lt; <a href="/<%= @site.domain %>"><%= @site.domain %><a></div>

<h1>Media</h1>

<div>
  Files sent to the media endpoint will be saved with this configuration.
</div>

<div>
  <form action="/<%= @site.domain %>/flows" method="post">
    <input type="hidden" name="id" value="<%= @flow.id %>">

    <div>
      Saves to <%= @flow.store.name %>. [<a href="<%= "/#{@site.domain}/stores/new?flow_id=#{@flow.id}" %>">Change</a>]
    </div>

    <div>
      <label>
        Path template
        <br>
        <input type="text" size="80" name="media_path_template" value="<%= @flow.media_path_template %>">
        <br>
        <small>
          <code>assets/{{year}}-{{month}}/{{day}}-{{slug}}{{extension}}</code>
        </small>
      </label>
    </div><div>
      <label>
        URL template
        <br>
        <input type="text" size="80" name="media_url_template" value="<%= @flow.media_url_template %>">
        <br>
        <small>
          <code>assets/{{year}}-{{month}}/{{day}}-{{slug}}{{extension}}</code>
        </small>
      </label>
    </div>

    <div>
      <br>
      <button type="submit">Update</button>
    </div>
  </form>
</div>
