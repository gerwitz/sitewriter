<h1>Media</h1>

<div>
  Files sent to the media endpoint will be saved with this configuration.
</div>

<% if @flow.media_store %>
  <div>
    Saves to <%= @flow.media_store.name %>. <!-- [<a href="<%= "/#{@site.domain}/stores/new?flow_id=#{@flow.id}" %>">Change</a>] -->
  </div>
<% else %>
  <div class="warning">
    No file storage configured. That won't work, will it?
  </div>
<% end %>

<div>
  <form action="/<%= @site.domain %>/flows/media" method="post">
    <input type="hidden" name="id" value="<%= @flow.id %>">

    <div>
      <label>
        Path template
        <br>
        <input type="text" size="80" name="media_path_template" value="<%= @flow.media_path_template %>">
        <br>
        <small>
          <code>assets/:year_month/:day-:slug.:extension</code>
        </small>
      </label>
    </div><div>
      <label>
        URL template
        <br>
        <input type="text" size="80" name="media_url_template" value="<%= @flow.media_url_template %>">
        <br>
        <small>
          <code>assets/:year_month/:day-:slug.:extension</code>
        </small>
      </label>
    </div>

    <div>
      <br>
      <button type="submit">Update</button>
    </div>
  </form>
</div>
